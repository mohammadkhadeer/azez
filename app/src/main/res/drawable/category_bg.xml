<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true"
        >


        <shape
            android:shape="rectangle">

            <!-- view background color -->
            <solid
                android:color="@color/colorWhite" >
            </solid>

            <!-- view border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/colorBlue" >
            </stroke>

            <!-- text color and type -->

            <!-- If you want to add some padding -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"    >
            </padding>

            <!-- Here is the corner radius -->
            <corners
                android:radius="12dp"
                android:color="@color/colorBlue" >
            </corners>

        </shape>


    </item><!-- pressed -->

    <item
        android:state_focused="true"
        >


        <shape
            android:shape="rectangle">

            <!-- view background color -->
            <solid
                android:color="@color/colorWhite" >
            </solid>

            <!-- view border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/colorBlue" >
            </stroke>

            <!-- text color and type -->

            <!-- If you want to add some padding -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"    >
            </padding>

            <!-- Here is the corner radius -->
            <corners
                android:radius="12dp"
                android:color="@color/colorBlue" >
            </corners>

        </shape>


    </item><!-- focused -->

    <item>
        <shape
            android:shape="rectangle">

            <!-- view background color -->
            <solid
                android:color="@color/colorWhite" >
            </solid>

            <!-- view border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/colorBlue" >
            </stroke>

            <!-- text color and type -->

            <!-- If you want to add some padding -->
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"    >
            </padding>

            <!-- Here is the corner radius -->
            <corners
                android:radius="8dp"
                android:color="@color/colorBlue" >
            </corners>

        </shape>

    </item><!-- default -->


</selector>